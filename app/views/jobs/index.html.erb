<div class="row">
    <h3 class="subheader">Active Job Listings</h3>
    <% @jobs.each do |job| %>
    <div class="row jobs">
      <%= render(:partial => 'view', :locals => {:job => job}) %>
      <div class="column small-12">
        <ul class="menu">
          <li><%= button_to("Apply", new_job_user_application_path(job), :method => 'get', :class => 'button') %></li>
          <li><%= button_to("View", job_path(job), :method => 'get', :class => 'button') %></li>
        </ul>
      </div>
    </div>
    <% end %>
</div>
