<h3 class="subheader text-center mainheader">Active Job Listings</h3>
<% @jobs.each do |job| %>
  <div class="row jobs">
    <div class="columns small-8 small-offset-2">
      <%= render(:partial => 'view', :locals => {:job => job}) %>
      <div class="columns small-12">
        <ul class="menu">
          <li><%= button_to("Apply", new_job_user_application_path(job), :method => 'get', :class=>"button button_spacing button_dropshadow") %></li>
          <li><%= button_to("View", job_path(job), :method => 'get', :class=>"button button_spacing button_dropshadow") %></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
