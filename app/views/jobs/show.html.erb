<div class="row">
  <div class="column small-12 red-row box-shadow text-center">
    <%= fa_icon "handshake-o", :class => "fa-5x" %>
    <h2 class="subheader text-center mainheader"><%= @job.position %></h2>
  </div>
</div>

<div class="row add-vertical-margin">
  <div class="column small-8 small-offset-2 white-row box-shadow">
  <%= render(:partial => 'view', :locals => {:job => @job}) %>
    <ul class="menu">
      <li><%= button_to("Apply", new_job_user_application_path(@job), :method => 'get', :class=>"button button_spacing button_dropshadow") %></li>
    </ul>
  </div>
</div>
