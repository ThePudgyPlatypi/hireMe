<div class="row">
  <h2 class="subheader">Delete Employer</h2>
  <%= form_for(@employer, :method => 'delete') do |employer| %>
    <p>Are you sure you want to delete <%= employer.object.company_name %>'s profile?</p>
    <%= employer.submit("Delete Employer", :class => "alert button") %>
  <% end %>
</div>
