
<h3 class="subheader text-center">General information</h3>
<!-- log in information -->
<div class="row">
  <div class="small-4 small-offset-2 columns">
    <label>Username
      <%= employer.text_field(:username) %>
    </label>
  </div>
  <div class="small-4 columns end">
    <label>Password
      <%= employer.password_field(:password) %>
    </label>
  </div>
</div>
<!-- Company name and industry  -->
<div class="row">
  <div class="small-4 small-offset-2 columns">
    <label>Company Name
      <%= employer.text_field(:company_name) %>
    </label>
  </div>
  <div class="small-4 columns end">
    <label>Industry
      <%= employer.text_field(:industry) %>
    </label>
  </div>
</div>
<!-- Founded date and size  -->
<div class="row">
  <div class="small-4 small-offset-2 columns">
    <label>Founded
      <%= employer.date_field(:founded) %>
    </label>
  </div>
  <div class="small-4 columns end">
    <label>Size
      <%= employer.text_field(:size) %>
    </label>
  </div>
</div>
<!-- about text box  -->
<div class="row">
  <div class="small-8 small-offset-2 columns end">
    <label>About Us
      <%= employer.text_area(:about, :placeholder => "limit 2500 characters", :rows => 8) %>
    </label>
  </div>
</div>

<!-- HQ Address  -->
