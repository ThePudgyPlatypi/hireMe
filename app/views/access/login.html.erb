<div class="row expanded content-expand">
    <div class="columns small-12">
      <div class="v-center-align">
        <%= form_tag(access_attempt_login_path, :method => :post) do %>
        <p><%= label_tag(:username) %></p>
        <p><%= text_field_tag(:username, params[:username]) %></p>
        <p><%= label_tag(:password) %></p>
        <p><%= password_field_tag(:password) %></p>
        <p><%= submit_tag("log in", :class => "button button_spacing button_dropshadow") %></p>
        <% end %>
      </div>
    </div>
</div>
