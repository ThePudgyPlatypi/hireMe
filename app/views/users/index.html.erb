<div class="row">
  <h2 class="subheader">User List</h2>
  <% @users.each do |user| %>
    <table summary="User list table" class="hover">
      <thead>
        <tr>
          <th width="200">Username</th>
          <th colspan="3" class="textCenter">Actions</th>
        <tr>
      </thead>
      <tbody>
        <tr>
          <td><%= user.username %></td>
          <td class="textCenter"><%= button_to("Show User", user_path(user), :method => "get", :class => "button") %></td>
          <td class="textCenter"><%= button_to('Edit User', edit_user_path(user), :method => 'get', :class => 'button') %></td>
          <td class="textCenter"><%= button_to('Delete User', delete_user_path(user), :method => 'get', :class => 'alert button') %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
  <br />
  <%= button_to("Create User", new_user_path, :method => "get", :class => "button") %>
</div>
