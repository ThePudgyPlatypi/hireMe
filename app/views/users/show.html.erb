<div class="row">
  <!-- user picture -->
  <div class="columns small-12 medium-4 user_picture">
    <h2 class="subheader mainheader">User <%= @user.username %> Parameters</h2>
    <%= image_tag(@user.avatar.url) %>
  </div>

  <!-- user resume -->
  <div class="columns small-12 medium-12 large-1 user_resume">
    <div class="row sidebar">
      <h4 class="subheader">Recent Applications</h4>
      <div class="column small-12">
        <% @apps.each do |app| %>
          <div class="row job">
            <div class="column small-8">
              <label class="bold">Position Applied for:</label>
                <p><%= app.job.position %></p>

            </div>

            <div class="column small-4">
              <label class="bold">When?</label>
                <p><%= app.created_at %></p>

            </div>
            <div class="column small-12">
              <ul class="menu">
                <li><%= button_to("View Job", job_path(app.job_id), :method => 'get', :class => 'button button_dropshadow') %></li>
              </ul>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- user information -->
    <div class="columns small-12 medium-12 large-7 user_information">
            <p>First Name</p>
            <p><%= @user.first_name %></p>
            <p>Last Name</p>
            <p><%= @user.last_name %></p>
            <p>Username</p>
            <p><%= @user.username %></p>
            <p>Email</p>
            <p><%= @user.email %></p>
            <p>About</p>
            <p><%= @user.about %></p>
            <p>Story</p>
            <p><%= @user.story %></p>
            <p>School</p>
            <p><%= @user.school %></p>
            <p>Major</p>
            <p><%= @user.major %></p>
            <p>Current Term</p>
            <p><%= @user.current_term %></p>
            <p>Graduation Date</p>
            <p><%= @user.graduation_date %></p>
    </div>
  </div>
</div>
