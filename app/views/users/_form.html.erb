<!-- First and last name  -->
<fieldset class="step">
  <div class="row add-vertical-margin" id="user-signup-steps">
    <h3>General Information</h3>
    <div class="column large-6 small-12">
      <label>First Name
        <%= user.text_field(:first_name, :placeholder => "Limit 50 Characters") %>
      </label>
    </div>

    <div class="column large-6 small-12">
      <label>Last Name
        <%= user.text_field(:last_name, :placeholder => "Limit 50 Characters") %>
      </label>
    </div>
  </div>

  <div class="row add-vertical-margin">
    <div class="column large-4 small-12">
      <!-- username and password  -->
      <label>User Name
        <%= user.text_field(:username, :placeholder => "Limit 50 Characters") %>
      </label>
    </div>
    <div class="column large-4 small-12">
      <label>Password
        <%= user.password_field(:password) %>
      </label>
    </div>
    <div class="column large-4 small-12">
      <!-- Email field and admin -->
      <label>Email
        <%= user.text_field(:email) %>
      </label>
    </div>
  </div>
</fieldset>

<fieldset class="step">
  <h3>Tell Us About Yourself</h3>
  <div class="row column add-vertical-margin">
    <!-- About field  -->
    <label>About Me
      <%= user.text_area(:about, :placeholder => "limit 2500 characters", :rows => 8) %>
    </label>

    <!-- Story field  -->
    <label>My Story
      <%= user.text_area(:story, :placeholder => "limit 2500 characters", :rows => 8) %>
    </label>
  </div>
</fieldset>

<fieldset class="step">
  <h3>Skills</h3>
  <%= user.nested_fields_for :skills, Skill.new do |skills| %>
    <div class="row add-vertical-margin">
      <div class="column large-6 small-12">
        <label>Name one of your skills
          <%= skills.text_field(:skill) %>
        </label>
      </div>
      <div class="column large-6 small-12">
        <label>Describe your skill in more detail
          <%= skills.text_area(:description) %>
        </label>
      </div>
    </div>
    <div class="row">
      <div class="column small-12">
        <%= radio_button("skills", "advanced", "1") %>
        <%= radio_button("skills", "experienced", "1") %>
        <%= radio_button("skills", "beginner", "1") %>
      </div>
    </div>
    <%= fa_icon "minus-circle", class: "" %>
    <%= skills.remove_nested_fields_link "Remove Skill", :class => "" %>
  <% end %>
</fieldset>
<%= fa_icon "plus-circle", class: "" %>
<%= user.add_nested_fields_link :skills, "Add Another Skill" %>


  <!-- School name -->
  <fieldset class="step">
    <h3 class="add-vertical-margin">Education</h3>
    <%= user.nested_fields_for :user_history_of_educations, UserHistoryOfEducation.new do |edu| %>
      <div class="row add-vertical-margin">
        <div class="column large-3 small-12">
          <label>School name
            <%= edu.text_field(:school) %>
          </label>
        </div>
        <div class="column large-3 small-12">
          <label>Major
            <%= edu.text_field(:major) %>
          </label>
        </div>
        <div class="column large-1 small-6">
          <label>GPA
            <%= edu.text_field(:gpa) %>
          </label>
        </div>
        <div class="column large-2 small-6">
          <label>Degree earned?
            <%= edu.text_field(:degree) %>
          </label>
        </div>
        <div class="column large-3 small-12">
          <label>Graduation Date
            <%= edu.date_field(:graduation_date) %>
          </label>
        </div>
      </div>
      <%= fa_icon "minus-circle", class: "" %>
      <%= edu.remove_nested_fields_link "Remove School" %>

    <% end %>
  </fieldset>
  <!-- this is the "add another education" link -->
  <%= fa_icon "plus-circle", class: "" %>
  <%= user.add_nested_fields_link :user_history_of_educations, "Add Another School" %>

  <!-- School name -->
  <fieldset class="step">
    <h3 class="add-vertical-margin">Employment History</h3>
    <%= user.nested_fields_for :user_history_of_employments, UserHistoryOfEmployment.new do |emp| %>
      <div class="row add-vertical-margin">
        <div class="column large-3 small-12">
          <label>Employer Name
            <%= emp.text_field(:employer) %>
          </label>
        </div>
        <div class="column large-3 small-12">
          <label>Start Date
            <%= emp.date_field(:start_date) %>
          </label>
        </div>
        <div class="column large-3 small-12">
          <label>End Date
            <%= emp.date_field(:end_date) %>
          </label>
        </div>
        <div class="column large-3 small-12">
          <label>Currently Employeed?
            <%= emp.check_box(:current_employer) %>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="column large-3 small-12">
          <label>Job Title
            <%= emp.text_field(:job_title) %>
          </label>
        </div>
        <div class="column large-3 small-12">
          <label>Contact Number
            <%= emp.text_field(:contact_number) %>
          </label>
        </div>
        <div class="column large-6 small-12">
          <label>Job Description
            <%= emp.text_area(:job_description) %>
          </label>
        </div>
      </div>
      <%= fa_icon "minus-circle", class: "" %>
      <%= emp.remove_nested_fields_link "Remove Job" %>

    <% end %>
  </fieldset>
  <!-- this is the "add another education" link -->
  <%= fa_icon "plus-circle", class: "" %>
  <%= user.add_nested_fields_link :user_history_of_employments, "Add Another Job" %>

  <fieldset class="step">
    <h3 class="add-vertical-margin">Media</h3>
    <div class="row red-row column large-12 small-12 add-vertical-margin box-shadow">
      <label>User Image
        <%= user.file_field(:avatar) %>
      </label>
    </div>

    <div class="row red-row column large-12 small-12 add-vertical-margin box-shadow">
      <label>User Resume
        <%= user.file_field(:document) %>
      </label>
    </div>
</fieldset>
