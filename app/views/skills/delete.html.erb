<div class="row v-center-align">
  <h2 class="subheader text-center mainheader">Delete Skill?</h2>
  <%= form_for(@skill, :url => delete_user_skill_path(@user), :method => 'delete') do |skill| %>
    <p class="text-center">Are you sure you want to delete this skill permanently?</p>
    <%= skill.submit("Delete Skill", :class => "alert button button_dropshadow button-center") %>
  <% end %>
</div>
